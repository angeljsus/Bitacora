.content-main
	width 100%
	height 100%
	// flex-wrap wrap
	.main-header
		width 100%
		height 40px
		display flex
		.options-b
			flex 2
			display flex
			.user-name
				width 300px
				font-size .8em
				display flex
				justify-content center
				align-items center
				// border 1px solid
			.cerrar-sesion
				display flex
				justify-content center
				align-items center
				text-align center
				width 70px
				font-weight bold
				font-size .8em
				&:hover
					text-decoration underline
				// align-self flex-end
				// border 1px solid
	.main-content
		width 100%
		height 200px
		height calc(100% - 40px)
	.display-nombre
		position absolute
		display flex
		width 100px
		height 25px
		align-self flex-end
		justify-content center
		align-items center
		font-weight bold
		font-size .8em
		top 0
		left 80%