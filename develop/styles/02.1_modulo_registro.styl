.form-container
	width 50%
	// flex-shrink 1
	height 100%
	display flex
	align-content flex-start
	flex-direction column
	border 1px solid rgba(0,0,0,.1)
	// border 2px solid
	.otros-registros
		// border 1px solid
		height 30px
		width 95%
		display flex
		align-items center
		justify-content flex-end
		.btn-otros
			width 30px
			height 30px
			margin-left 10px
			margin-rigth 10px
			background #FFFF
			border none
			border-radius 15px
			span
				width 100%
				height 100%
				font-size 2em
				display flex
				justify-content center
				align-items center
				color #c97c5d
			&:hover
				background #FFFF
				border 1px solid rgba(0,0,0,.2)
	.mensaje-form
		width 100%
		// height 40px
		display flex
		justify-content center
		align-items center
		// border 1px solid
		font-weight bold
		font-size .8em
		color #fca311
	.item-form
		width 100%
		height 35px
		margin 0px 0px 10px 0px
		display flex
		justify-content center
		// font-size .8em
		// border 1px solid red
		.lbel-file
			width 270px
			display flex
			// justify-content center
			align-items center
			font-size .8em
			color gray
			border-bottom 2px solid rgba(0,0,0,.2)
			// border-bottom 2px solid red
		.file-input
			width 130px
			background #94d2bd
			justify-content center
			display flex
			font-weight bold
			&:hover:before
				background #264653
				color #FFFF
		.file-input::-webkit-file-upload-button
			visibility hidden
			// background #94d2bd
		.file-input::before
			display inline-flex
			// background rgba(0,0,0,.2)
			content 'Seleccionar'
			// width 40px
			padding 0
			margin 0
			height 100%
			// width 100%
			justify-content center
			align-items center
		.item-input
			width 400px
			border solid
			// font-size .8em
			border none
			border-bottom 2px solid rgba(0,0,0,.2)
			&:disabled
				background #FFFF
		.item-inp-data
			width 270px
			border none
			border-bottom 2px solid rgba(0,0,0,.2)
			&:disabled
				background #FFFF
		.btn-fecha
			font-weight bold
			border none
			background #94d2bd
			&:hover
				background #264653
				color #FFFF
	.item-around
		width 50%
		// border 1px solid
		align-self center
		justify-content space-evenly
.similares-container
	width 50%
	height 100%
	display flex
	flex-wrap wrap
	.area-similares
		width 100%
		height 100%
		display flex
		flex-direction column
		border 1px solid rgba(0,0,0,.1)
		.title-similares
			width 100%
			height 60px
			display flex
			flex-direction column
			font-weight bold
			background #6c757d
			color #FFFF
			.row-title-similar
				width 100%
				height 30px
				display flex
				justify-content center
				align-items center
				// border 1px solid
				.item-similar
					flex 1
					display flex
					justify-content center
					align-items center
					height 100%
					font-size .8em
					.btn-similar
						width 100px
						height 25px
						display flex
						flex-wrap wrap
						justify-content center
						align-items center
						font-size .8em
						font-weight bold
						border 1px solid
						background white
						background #6c757d
						border none
						color white
					.markup
						color black
						background white
						// border 2px solid #ffb703
		.content-similares
			width 100%
			flex 1
			display flex
			flex-wrap wrap
			justify-content space-between
			align-content flex-start
			overflow auto
			.no-hover
				pointer-events none
			.item-usuario
				width 100%
				height 30px
				border 1px solid rgba(0,0,0,.2)
				display flex
				justify-content space-around
				align-items center
				font-weight bold
				font-size .8em	
				&:hover
					background #48cae4
					color #FFFF
				.usuario-similar
					flex 1
					height 100%
					display flex
					align-items center
					// border 1px solid red
					&:nth-child(1)
						flex 3
			// border 2px solid green
			.item-fecha
				width 200px
				height 30px
				margin 3px
				font-size .7em
				font-weight bold
				display flex
				justify-content center
				align-items center
				cursor context-menu
				// color #FFFF
				border 1px solid rgba(0,0,0,.2)
				.fecha-status
