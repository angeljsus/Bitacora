.container-actividades
	width 100%
	height 300px
	display flex
	flex-wrap wrap
	justify-content center
	background #FFFF	
	.display-datos
		width 100%
		height 100%
		.header-act
			width 100%
			height 40px
			display flex
			align-items space-around
			font-weight bold
			// border-bottom 1px solid rgba(0,0,0,.2)
			background #6c757d
			color #FFFF
			.title-act
				flex 1
				height 100%
				display flex
				justify-content space-around
				align-items center
				// border 1px solid
			.equis
				width 50px
				// flex-grow 1
				height 100%
				display flex
				justify-content center
				align-items center
				align-self flex-end
				cursor context-menu
				color #FFFF
				background red
		.datos-registro
			width 100%
			height 30px
			display flex
			justify-content space-evenly
			font-size .9em
			// background #FFFF
			color #6c757d
			// border 1px solid
			.info-registro
				// color #FFFF
				display flex
				justify-content center
				align-items center
				font-weight bold
		.registro-actividades
			width 100%
			height calc(100% - 70px)
			// flex-shrink 1
			overflow auto
			// border 1px solid #6c757d
			.item-actividad
				width 100%
				height 40px
				display flex
				align-items center
				font-size .8em
				border-bottom 1px solid rgba(0,0,0,.2)