.content-csc
	width 500px
	height 400px
	display flex
	flex-direction column
	background #FFFF
	.csc-header
		width 100%
		height 40px
		font-weight bold
		display flex
		justify-content center
		align-items center
		background #6c757d
		color #FFFF
		// border 2px solid
	.csc-content
		width 90%
		align-self center
		flex 1
		overflow auto
		// border 2px solid
		.csc-row
			width 100%
			height 40px
			display flex
			align-items center
			font-size .9em
			// border 1px solid
			.csc-col
				flex 1
				&:nth-child(1)
					font-weight bold
				&:nth-child(2)
					flex 2
	.csc-options
		width 100%
		height 40px
		display flex
		justify-content space-around
		// border 2px solid
		.csc-option
			width 150px
			height 100%
			border none
			font-weight bold
			background #94d2bd
			&:hover
				background #023e8a
				color #FFFF