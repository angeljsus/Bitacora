.actividades-constantes
	width 100%
	height 100%
	// border 2px solid green
.actividades-constantes
	width 100%
	height 100%
	display flex
	// flex-wrap wrap
	flex-direction column
	.registrar-constantes
		width 100%
		height 90px
		display flex
		flex-direction column
		align-items center
		// justify-content center
		
		// border 1px solid red
		.mensaje-form
			height 20px
			font-size .8em
			font-weight bold
			color #fca311
			// border 1px solid red
		// .random-inp
			// border 1px solid rgba(0,0,0,0.2)
		.item-form
			width 100%
			height 70px
			display flex
			align-items center
			justify-content center
			// border 1px solid
			.input-actividad
				flex 1
				width 100%
				padding 5px
				font-size .8em
				border 1px solid rgba(0,0,0,0.2)
				&:empty:before
					content attr(data-placeholder)
					color gray
	.mostrar-constantes
		width 100%
		height 100%
		overflow auto
		display flex
		flex 1
		// border 2px solid green
		.lista-actividades
			width 100%
			height 100%
			display flex
			flex-direction column
			// border 2px solid blue
			.title-mod
				height 35px
				color white
				background #6c757d
				display flex
				justify-content space-evenly
				align-items center
			.content
				width 100%
				flex 1
				overflow auto
				// border 2px solid blue
				.marked
					background #48cae4
				.item-act-random
					width 100%
					display flex
					border-radius 5px
					margin-top 5px
					color gray
					border 1px solid rgba(0,0,0,.2)
					&:hover
						border 1px solid gray
					.agarrate-act
						display flex
						flex 2
						align-items center
						input
							width 25px
							height 35px
							padding 0
							margin 0
							opacity 0
						label
							font-size .8em
							flex 1
							display flex
							height 100%
							align-items center
					.options-act-random
						display flex
						align-items center
						.option-act
							color #6c757d
							// margin 2px
							border none
							&:hover
								margin 0px
								border 1px solid rgba(0,0,0,.2)
								// border 2px solid
								border-radius 13px