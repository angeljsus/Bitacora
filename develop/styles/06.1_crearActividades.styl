.random-marked
	background #48cae4
.random-module
	width 100%
	height 100%
	// border 2px solid
	.header-module
		height 60px
		width 100%
		background #6c757d
		color white
	.container-module
		height calc(100% - 60px)
		display flex
		flex-direction column
		// border 2px solid red
		.calendar-area
			height 300px
			display flex
			border 1px solid rgba(0,0,0,0.2)
			.preview-calendar
				flex 2
				// border 1px solid
			.options-calendar
				flex 1
				flex-direction column
				display flex
				// border 2px solid
				border 1px solid rgba(0,0,0,0.2)
				.info-group
					flex 2
					display flex
					flex-direction column
					// align-items space-around
					// border 1px solid red
					.item-fecha-s
						width 100%
						height 60px
						display flex
						align-items space-around
						background #edf2f4
						// border 1px solid gray
						font-size .8em
						.tle
							font-weight bold
							flex 1
							display flex
							align-items center
							// border 1px solid
						.vle
							flex 3
							display flex
							align-items center
							// border 1px solid
				.buttons-container
					flex 2
					display flex
					flex-direction column
					align-items center
					// border 1px solid
					.btn-option
						margin 5px
						height 30px
						width 100px
						border none
						font-weight bold
						background #00b4d8
						&:hover
							border 1px solid
							color white
				.messages-container
					flex 1
					font-size .8em
					font-weight bold
					display flex
					justify-content center
					text-align center
					align-items center
					color #fca311
					// border 2px solid
		.actividades-area
			height calc(100% - 300px)
			display flex
			flex-direction column
			// border 2px solid green
			.formulario
				width 100%
				height 60px
				display flex
				align-items center
				// border 1px solid red
				.input-actividad
					flex 1
					width 100%
					min-height 35px 
					padding 5px
					font-size .8em
					font-weight bold
					display flex
					align-items center
					border 1px solid rgba(0,0,0,0.2)
			.despliegue-actividades
				width 100%
				height calc(100% - 60px)
				overflow auto
				// border 2px solid blue
				.marked
					background #48cae4
				.item-act-random
					width 100%
					display flex
					border-radius 5px
					margin-top 5px
					color gray
					border 1px solid rgba(0,0,0,.2)
					// #48cae4
					.agarrate-act
						display flex
						min-height 30px
						flex 2
						display flex
						// border 1px solid
						align-items center
						.random-ref
							width 50px
							height 100%
							display flex
							align-items center
							justify-content center
							font-weight bold
						.description-ref
							flex 1
							text-align justify
							font-size .9em
							// font-weight bold
					.options-act-random
						width 70px
						display flex
						align-items center
						justify-content space-around
						// border 1px solid red
						.option-act
							color #6c757d
							border none
							&:hover
								margin 0px
								border 1px solid rgba(0,0,0,.2)
								border-radius 13px
