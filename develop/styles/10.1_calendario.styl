.modal-fecha
	width 300px
	// height 300px
	background #FFFF
	.container-calendario
		width 100%
		height 100%
		border 1px solid rgba(0,0,0,.3)
		color #495057
		user-select none
		.calendario-options
			width 100%
			height 40px
			display flex
			justify-content center
			align-items center
			border-bottom 1px solid rgba(0,0,0,.2)
			.nav-option
				width 40px
				height 100%
				display flex
				justify-content center
				align-items center
				font-weight bold
				cursor context-menu
				color #6c757d
				// border 1px solid
				&:hover
					background #caf0f8
			.nav-title
				flex-grow 1
				height 100%
				display flex
				justify-content center
				align-items center
				font-weight bold
				font-size .8em
				// color #6c757d
				// border 1px solid
		.row-days
			width 100%
			height 30px
			display flex
			.item-day
				width 45px
				height 100%
				display flex
				justify-content center
				align-items center
				font-size .8em
				cursor context-menu
			.day
				cursor context-menu
				// border 1px solid
				&:hover
					background #caf0f8
			.status-disabled
				background #e5e5e5
				cursor context-menu
				pointer-events none
				&:hover
					background #e5e5e5